%h2 Details about #{@book.title}
 
%ul#details
  %li
    Genre:
    = @book.genre
  %li
    ISBN:
    = @book.isbn_number
  %li
    Author:
    = @book.author
  %li
    Published on:
    = @book.publish_date.strftime("%B %d, %Y")
 
%h3 Description:
 
%p#description= @book.description

= link_to 'Edit book', edit_book_path(@book)
= link_to 'Find Books With Same Author', search_similar_books_url(id: @book.id) 
= link_to 'Delete book', book_path(@book), :method => :delete
= link_to 'Go back to listing', books_path